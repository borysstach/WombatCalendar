<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/day_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/week_day_height"
        android:layout_marginLeft="@dimen/activity_quarter_margin"
        android:layout_marginRight="@dimen/activity_quarter_margin"
        android:layout_marginTop="@dimen/activity_half_margin"
        android:background="@drawable/stroke_shape"
        android:orientation="vertical"
        android:padding="@dimen/activity_half_margin">

        <TextView
            android:id="@+id/day_name_text_view"
            style="@style/day_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/week_view_event_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/week_event"/>


        <TextView
            android:id="@+id/week_view_event_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/week_event"/>


        <TextView
            android:id="@+id/week_view_event_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/week_event"/>


        <TextView
            android:id="@+id/week_view_event_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/week_event"/>


    </LinearLayout>

    <TextView
        android:id="@+id/day_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</FrameLayout>