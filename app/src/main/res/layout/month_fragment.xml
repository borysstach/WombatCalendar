<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/month_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/month_image_weight"/>
    <TextView
        android:id="@+id/month_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/activity_half_margin"/>
    <TextView
        android:text="STYCZEÅƒ"
        android:id="@+id/month_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"/>
    <TextView
        android:text="2015"
        android:id="@+id/month_year_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center_horizontal|top"/>

    <LinearLayout
        android:id="@+id/month_week_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="P"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="W"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="S"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="C"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="P"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="S"
            style="@style/month_days_of_week"
            android:textColor="@color/saturday_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="N"
            style="@style/month_days_of_week"
            android:textColor="@color/sunday_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/month_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/month_recycler_weight"
        android:background="@color/back"
        android:layout_marginTop="@dimen/activity_quarter_margin"/>

</LinearLayout>