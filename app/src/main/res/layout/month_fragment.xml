<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/styczen"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/day_stroke"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <TextView
        android:text="STYCZEÅƒ"
        android:id="@+id/month_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/day_stroke"
        android:textSize="20sp"
        android:background="@color/day_stroke_back"
        android:gravity="center"/>
    <TextView
        android:text="2015"
        android:id="@+id/month_year_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/day_stroke"
        android:textSize="16sp"
        android:background="@color/day_stroke_back"
        android:gravity="center_horizontal|top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/day_stroke">

        <TextView
            android:text="P"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="W"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="S"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="C"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="P"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="S"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="N"
            style="@style/month_days_of_week"
            android:textColor="@color/day_stroke_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/month_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/back"
        android:layout_marginTop="@dimen/activitu_half_margin"/>

</LinearLayout>