<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_quarter_margin"
    android:layout_marginTop="@dimen/activity_quarter_margin"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_half_margin"
    android:paddingLeft="@dimen/activity_half_margin"
    android:paddingRight="@dimen/activity_half_margin"
    android:paddingTop="@dimen/activity_half_margin">

    <TextView
        android:id="@+id/standard_event_name"
        style="@style/subtittle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="20sp"
        />

</LinearLayout>