<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Base application theme.
             Defining this lets values-v21/styles.xml reuse it with changes. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/back</item>
        <item name="colorPrimaryDark">@color/my_primary_dark</item>
        <item name="colorAccent">@color/day_stroke</item>
        <item name="android:textColorPrimary">@color/day_stroke</item>
        <item name="android:textColorSecondary">@color/day_stroke</item>
        <item name="android:windowBackground">@color/back</item>
        <item name="android:actionMenuTextColor">@color/my_primary_dark</item>
    </style>

    <style name="AppTheme.Week" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/back</item>
        <item name="colorPrimary">@color/back</item>
        <item name="colorPrimaryDark">@color/back</item>
        <item name="colorAccent">@color/my_primary_dark</item>
        <item name="android:textColorPrimary">@color/my_primary_dark</item>
        <item name="android:textColorSecondary">@color/my_primary_dark</item>
        <item name="android:windowBackground">@color/back</item>
    </style>

    <style name="title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|normal</item>
        <item name="android:textColor">@color/whole_day_text</item>
    </style>

    <style name="subtittle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/day_stroke</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="numbers">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/day_stroke</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="day_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/day_title</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="week_event">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:gravity">left</item>
        <item name="android:clickable">false</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
